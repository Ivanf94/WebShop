@using Microsoft.AspNetCore.Identity
@using AlgebraWebShop2025.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<li class="nav-item">
		<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">My orders</a>
	</li>
}

@if(SignInManager.IsSignedIn(User) && 
	await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
	<li class="nav-item">
		<div class="dropdown">
			<a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" href="#">
				Admin
			</a>
			<div class="dropdown-menu">
				<a class="dropdown-item" asp-controller="" asp-action="">Categories</a>
				<a class="dropdown-item" asp-controller="" asp-action="">Products</a>
				<div class="dropdown-divider"></div>
				<a class="dropdown-item" asp-controller="" asp-action="">Orders</a>
			</div>
		</div>
	</li>
}